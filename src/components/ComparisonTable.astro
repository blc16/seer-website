---
import { benchmarks, monthlyEvalPricing } from '../content/copy';
---
<div class="space-y-6">
  <table class="w-full text-sm card p-6">
    <thead class="text-left text-muted">
      <tr>
        <th class="py-2">Model</th>
        <th>Accuracy</th>
        <th>Macro F1</th>
        <th>Micro F1</th>
      </tr>
    </thead>
    <tbody>
      {benchmarks
        .filter((b) => b.model !== 'Claude 4 Sonnet')
        .map((b) => (
        <tr>
          <td>{b.model}</td>
          <td>{b.accuracy.toFixed ? b.accuracy.toFixed(3) : b.accuracy}</td>
          <td>{b.macroF1}</td>
          <td>{b.microF1}</td>
        </tr>
      ))}
    </tbody>
  </table>

  <table class="w-full text-sm card p-6">
    <thead class="text-left text-muted">
      <tr>
        <th class="py-2">Monthly Evals</th>
        <th>Seer-4B</th>
        <th>Seer-1.7B</th>
        <th class="text-right">GPT-5</th>
        <th class="text-right">GPT-5-mini</th>
        <th class="text-right">GPT-5-nano</th>
      </tr>
    </thead>
    <tbody>
      {monthlyEvalPricing.map((row) => (
        <tr>
          <td>{row.monthlyEvals}</td>
          <td>{row.seer4B}</td>
          <td>{row.seer1_7B}</td>
          <td class="text-right">{row.gpt5}</td>
          <td class="text-right">{row.gpt5Mini}</td>
          <td class="text-right">{row.gpt5Nano}</td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
