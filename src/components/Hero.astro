---
import MockScreenshot from './MockScreenshot.astro';

const {
  title,
  subtitle,
  visualLabel = 'Seer dashboard preview',
  img
} = Astro.props;
---
<section class="container grid lg:grid-cols-2 gap-10 items-center py-16">
  <div>
    <h1 class="font-serif text-5xl leading-tight">{title}</h1>
    <p class="mt-4 text-lg text-muted">{subtitle}</p>
    <div class="mt-8 flex gap-3">
      <a href="/book-demo" class="inline-flex items-center rounded-full bg-neutral-900 text-white px-5 py-3 dark:bg-white dark:text-black">Book a demo</a>
      <a href="/products/change-testing" class="inline-flex items-center rounded-full bg-neutral-100 text-text px-5 py-3 dark:bg-[#1a2230] dark:text-white">See products</a>
    </div>
  </div>
  {img ? (
    <img src={img} alt={visualLabel} class="rounded-2xl shadow-card w-full" loading="eager" />
  ) : (
    <MockScreenshot label={visualLabel} className="w-full" />
  )}
</section>
