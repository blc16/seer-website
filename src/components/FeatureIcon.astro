---
const { icon, title, description } = Astro.props;
---
<div class="flex gap-4">
  <div class="h-12 w-12 rounded-full bg-surface flex items-center justify-center">
    <img src={icon} alt="" class="h-6 w-6" loading="lazy" />
  </div>
  <div>
    <h3 class="font-semibold text-text">{title}</h3>
    <p class="text-muted text-sm mt-1">{description}</p>
  </div>
</div>
